#ifndef BUTTON_H_
#define BUTTON_H_

#include "Std_Types.h"

#define BUTTON_PULLUP 				    (1u)
#define BUTTON_COMPVALUE_PULLUP 	    (0u)
#define BUTTON_PRESSED_PULLUP           (0u)
#define BUTTON_PULLDOWN 				(0u)
#define BUTTON_COMPVALUE_PULLDOWN 	    (1u)
#define BUTTON_PRESSED_PULLDOWN         (1u)

void BUTTON_init(uint8 a_portId,uint8 a_pinId);

uint8 BUTTON_state(uint8 a_portId,uint8 a_pinId,uint8 a_mode);




#endif /* BUTTON_H_ */
