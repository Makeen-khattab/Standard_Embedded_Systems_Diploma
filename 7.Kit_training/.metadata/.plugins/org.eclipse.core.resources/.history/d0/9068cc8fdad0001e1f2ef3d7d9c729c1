#ifndef BUTTON_H_
#define BUTTON_H_

#include "Std_Types.h"

#define BUTTON_PULLUP 				    (1u)
#define BUTTON_COMPVALUE_PULLUP 	    (0u)
#define BUTTON_PRESSED_PULLUP           (0u)
#define BUTTON_PULLDOWN 				(0u)
#define BUTTON_COMPVALUE_PULLDOWN 	    (1u)
#define BUTTON_PRESSED_PULLDOWN         (1u)

#define BUTTON_PORTAID                  (0u)
#define BUTTON_PORTBID                  (1u)
#define BUTTON_PORTCID                  (2u)
#define BUTTON_PORTDID                  (3u)

#define BUTTON_PIN0ID					(0u)
#define BUTTON_PIN1ID					(1u)
#define BUTTON_PIN2ID					(2u)
#define BUTTON_PIN3ID					(3u)
#define BUTTON_PIN4ID					(4u)
#define BUTTON_PIN5ID					(5u)
#define BUTTON_PIN6ID					(6u)
#define BUTTON_PIN7ID					(7u)


void BUTTON_init(uint8 a_portId,uint8 a_pinId);

uint8 BUTTON_state(uint8 a_portId,uint8 a_pinId,uint8 a_mode);




#endif /* BUTTON_H_ */
