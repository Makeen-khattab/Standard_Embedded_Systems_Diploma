#ifndef KEYPAD_H_
#define KEYPAD_H_
#include"Std_Types.h"


#define START_PORT_COLUMN 			PORTB_ID
#define START_PIN_COLUMN 			PIN4_ID
#define START_PORT_ROW 				PORTB_ID
#define START_PIN_ROW	 			PIN0_ID
#define KEYPAD_4x4					0
/*#define KEYPAD_4x3
 *
 * According to the Hardware connected
 * */
#define	KEYPAD_4x3					1

#define PULLUP						0

#define	PULLDOWN					1


#if(PULLUP ==1)
#define COMPVALUE					0
#define WRITEVALUE					0


#elif(PULLDOWN ==1)
#define COMPVALUE					1
#define WRITEVALUE					1
#endif

#define NOTHING_PRESSED			   'n'
#define BUTTON_POSITION		(a_rowNum + a_colNum +1)


#if(KEYPAD_4x4==1)

#define FORLOOP_ROW 		4
#define FORLOOP_COL 		4

#elif(KEYPAD_4x3==1)
#define FORLOOP_ROW 		4
#define FORLOOP_COL 		3
#endif

void KEYPAD_init(void);
uint8 KEYPAD_getPressedKey(void);
uint8 KEYPAD_adjustKeyNumber(uint8);
#endif /* KEYPAD_H_ */
